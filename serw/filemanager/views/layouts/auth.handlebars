<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Filemanager - Auth</title>
    <link rel="stylesheet" href="/scss/Auth/auth.css" />
    <link rel="stylesheet" href="/scss/index.css" />

    <link rel="shortcut icon" href="/img/logo.webp" type="image/x-icon" />
    <link rel="preload" as="image" href="img/background.webp" />

    <script src="/js/build/imageParalax.js"></script>
    <script src="/js/build/loginForm.js"></script>
  </head>
  <body>
    <main class="login-page">
      <div class="background-image-container">
        <img
          class="background-image"
          src="img/background.webp"
          alt="Background Image"
        />
      </div>
      <script id="image-load">
        const image = document.querySelector(".background-image");
        image.onload = () => {
          document.querySelector(".login-container").style.display = "flex";
          document.querySelector("#image-load").remove();
        }
      </script>
      <div class="login-container">
        {{{body}}}
      </div>
    </main>
  </body>
</html>