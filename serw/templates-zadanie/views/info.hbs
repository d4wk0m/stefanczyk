  <ul>
    <li><a class="nav-link" href="/">UPLOAD</a></li>
    <li><a class="nav-link" href="/files">FILEMANAGER</a></li>
    <li class="active"><a class="nav-link" href="/info">INFO</a></li>
    <div class="hover-background"></div>
