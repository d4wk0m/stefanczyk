<nav>
  <ul>
    <li><a class="nav-link" href="/">UPLOAD</a></li>
    <li class="active"><a class="nav-link" href="/files">FILEMANAGER</a></li>
    <li><a class="nav-link" href="/info">INFO</a></li>
    <div class="hover-background"></div>
  </ul>
</nav>
<main class="files">
  <aside>
    <p>
      <img src="img/multiupload.png" alt="" /><span>filemanager</span>
    </p>
    <div class="info-card">
      <div class="img-wrapper"><img src="img/info.png" alt="" /></div>
      <h2>Info Card</h2>
      <p>A sample info card with link to some article</p>
      <div class="btn"><a href="">Beta</a></div>
    </div>
  </aside>
  <div class="content">
    <table>
      <tr class="header">
        <th>id</th>
        <th>icon</th>
        <th>name</th>
        <th>size</th>
        <th>type</th>
        <th>-</th>
        <th>-</th>
        <th>-</th>
        <th>-</th>
      </tr>
      {{#each context}}
        <tr>
          <td>{{id}}</td>
          <td style="display: flex; justify-content: center"><img
              src="/img/icons/{{icon}}.svg"
              alt=""
            /></td>
          <td>{{name}}</td>
          <td>{{size}}</td>
          <td>{{type}}</td>
          <td><a href="/show?id={{id}}" target="_blank">SHOW</a></td>
          <td><a href="/info?id={{id}}">INFO</a></td>
          <td><a href="/download?id={{id}}" download>DOWNLOAD</a></td>
          <td><a href="/delete?id={{id}}">DELETE</a></td>
        </tr>
      {{/each}}
    </table>
  </div>
</main>